<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}
		<h2 class="h2"><a href="{{post.get_path}}">{{post.title}}</a></h2>


		{% if post.get_thumbnail %}
			<img src="{{post.get_thumbnail.get_url}}" />
		{% endif %}
        <p>{{post.get_preview}}</p>
	{% endblock %}
</article>